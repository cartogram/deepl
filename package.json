{
  "name": "deepl-js",
  "version": "0.0.1",
  "description": "DeepL API client for the browser and Node",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup src/index.ts --format cjs, esm --dts",
    "lint": "tsc",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "format": "prettier --write ."
  },
  "keywords": [
    "deepL"
  ],
  "author": "Matt Seccafien",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.3.1",
    "prettier": "^2.8.8",
    "tsup": "^7.0.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all",
    "semi": false,
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  }
}
